{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "baseUrl": "./",
      "paths": {
        "@/*": ["*"]
      }
    },
    "include": ["*.ts", "src/Server.ts", "src/Model.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }
  